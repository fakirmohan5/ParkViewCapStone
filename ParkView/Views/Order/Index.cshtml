@model ParkView.Models.Domain.OrderEntity

<style>

	.form-group{
		margin: 30px 30px;
	}
</style>
<div class="container" style="margin-top:100px; align-items:center;">
	<div class="row">
		<div class="col-md-4">
			<form asp-action="InitiateOrder" asp-controller="GrandParkView">
				<div class="form-group">
					<label asp-for="CustomerName" class="form-control"></label>
					<br />
					<input type="text" asp-for="CustomerName" class="form-control" />
					<span asp-validation-for="CustomerName" class="text-danger"></span>


					
				</div>

				<div class="form-group">
					<label asp-for="Email" class="form-control"></label>
					<br />

					<input type="email" asp-for="Email" class="form-control" />
					<span asp-validation-for="Email" class="text-danger"></span>

				</div>


				<div class="form-group">
					<label asp-for="PhoneNumber" class="form-control"></label>
					<br />

					<input type="number" asp-for="PhoneNumber" class="form-control" />
					<span asp-validation-for="PhoneNumber" class="text-danger"></span>

				</div>

				<div class="form-group">
					<label asp-for="TotalAmount" class="form-control"></label>
					<br />

					<input type="number" asp-for="TotalAmount" class="form-control" />
					<span asp-validation-for="TotalAmount" class="text-danger"></span>

				</div>



				<div class="form-group">
					<input type="submit" value="Continue to Pay" class="btn btn-primary" />
				</div>

			</form>
		</div>
	</div>
</div>

