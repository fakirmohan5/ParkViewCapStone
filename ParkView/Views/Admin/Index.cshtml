@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@model List<ParkView.Models.Domain.Hotel>

<div class="container" style="margin-top:100px;">

	<h1>Hotels</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>

				<th>Place</th>

				<th>Num Rooms</th>

				<th>Prsd rooms</th>

				<th>Exc rooms</th>

				<th>sup-dlx rooms</th>
				<th>deluxe rooms</th>
				<th>Image</th>
				<th>Opearations</th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>@item.Id</td>
					<td>@item.Name</td>
					<td>@item.Place</td>
					<td>@item.NumRooms</td>
					<td>@item.NumPresedentialRooms</td>
					<td>@item.NumExecutiveRooms</td>
					<td>@item.NumSuperDeluxeRooms</td>
					<td>@item.NumDeluxeRooms</td>
					<td>@item.imageUrl</td>
					<td><a asp-controller="Admin" asp-action="View" asp-route-id="@item.Id">Update</a></td>




				</tr>
			}
		</tbody>
	</table>

</div>



