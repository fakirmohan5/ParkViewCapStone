                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="WhatWeOffer" asp-action="Index">What We Offer</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="OurBrand" asp-action="Index">Our Brand</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="HotelView">Hotel View</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="DeluxeRoomView">Deluxe room View</a>
                        </li>
                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="AddHotel">Add hotel</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CabBooking" asp-action="Book">Book Cab</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="CabBooking" asp-action="Index">see booked cabs</a>
                        </li>


                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="RoomBooking" asp-action="BookRoom">Book room</a>
                        </li>

                        <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="RoomBooking" asp-action="Index">see booked rooms</a>
                        </li>
