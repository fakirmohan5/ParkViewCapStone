                        <partial name="_LoginPartial" />


                        






                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="" style="margin-bottom:300px; ">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    

    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="footer-col">
                    <h4>Corporate Sites</h4>
                    <ul>
                        <li><a asp-controller="Footer" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Footer" asp-action="Career">Careers</a></li>

                        <li><a asp-controller="Footer" asp-action="">Investor Relations</a></li>

                        <li><a asp-controller="Footer" asp-action="">Corporate Responsibility</a></li>

                    </ul>
                </div>
                <div class="footer-col">
                    <h4>Customer Service</h4>
                    <ul>
                        <li><a asp-controller="Footer" asp-action="CustomerService">Customer Service</a></li>
                        <li><a asp-controller="Footer" asp-action="FAQ">FAQs</a></li>

                        <li><a asp-controller="Contact" asp-action="Index">Contact Us</a></li>

                        <li><a asp-controller="Footer" asp-action="">Policy</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4> Explore More</h4>
                    <ul>
                        <li><a asp-controller="Footer" asp-action="TravelAdvisor">Travel Advisor</a></li>
                        <li><a asp-controller="Footer" asp-action="CorporateTravel">Corporate Travel</a></li>

                        <li><a asp-controller="Footer" asp-action="">Residences</a></li>

                        <li><a asp-controller="Footer" asp-action="">Gift Cards</a></li>
                    </ul>
                </div>
                <div class="footer-col">
                    <h4>follow us</h4>
                    <div class="socials">
                        <a asp-controller="Footer" asp-action=""><i class="fab fa-facebook-f"></i></a>
                        <a asp-controller="Footer" asp-action=""><i class="fab fa-twitter"></i></a>

                        <a asp-controller="Footer" asp-action=""><i class="fab fa-instagram"></i></a>

                        <a asp-controller="Footer" asp-action=""><i class="fab fa-linkedin-in"></i></a>

                    </div>
                </div>
            </div>

        </div>

    </footer>


    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
